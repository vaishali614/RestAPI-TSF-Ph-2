<% include partials/header %>

<div class="container">
    <div>
        <h1 style="text-align: center; color: white; margin: 5% 0;">Create a new Student</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/view" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="age" placeholder="Age (in yrs)" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="contact" placeholder="Contact Number" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create</button>
                </div>
            </form>
            <a href="/" class="btn btn-sm btn-success">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>